<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lock_screen_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/app_name"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin20"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txtSize30"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/margin200"
        android:layout_height="@dimen/margin200"
        android:src="@drawable/img_screen1"
        android:scaleType="fitXY"
        />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/slide1_txt"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txtSize18"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingStart="@dimen/margin50"
        android:paddingEnd="@dimen/margin50"
        android:layout_marginBottom="@dimen/margin70"
        />
</LinearLayout>